<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Edit Account</h2>
      <h5>アカウントの編集</h5>
      <%= link_to "ログアウト", "#", class: 'btn'%>
      <%= link_to "チャットページに戻る", :back, class: 'btn'%>
    </div>

    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, local: true do |f|%>
      <%= render "shared/error_messages", model: f.object %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :name%>
            <i>(フルネーム（全角日本語)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true, placeholder: "例：山田太郎" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :age_id %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"field-select"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :subject_id %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:subject_id, Subject.all, :id, :name, {}, {class:"field-select"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :prefecture_id %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"field-select"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :operation_id %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:operation_id, Operation.all, :id, :name, {}, {class:"field-select"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :schooltype_id %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:schooltype_id, Schooltype.all, :id, :name, {}, {class:"field-select"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :school_name%>
          </div>
          <div class='field-input'>
            <%= f.text_field :school_name, placeholder: "例：〇〇中学校,〇〇高等学校,〇〇中学校・高等学校"  %>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
