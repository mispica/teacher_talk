<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
      <%= link_to "Googleで登録", user_google_oauth2_omniauth_authorize_path, method: :post, class: 'btn' %>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :name%>
            <i>(フルネーム（全角文字)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
      <%if @sns_id.present? %>
        <%= hidden_field_tag :sns_auth, true %>
      <% else %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>(半角英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
      <% end %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :age_id %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"field-select"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :subject_id %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:subject_id, Subject.all, :id, :name, {}, {class:"field-select"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :prefecture_id %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"field-select"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :operation_id %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:operation_id, Operation.all, :id, :name, {}, {class:"field-select"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :schooltype_id %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:schooltype_id, Schooltype.all, :id, :name, {}, {class:"field-select"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :school_name%>
            <i>(全角文字)</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :school_name, placeholder: "例：〇〇中学校,〇〇高等学校,〇〇中学校・高等学校" %>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
